var $user = $('#<%= @user.id %>')
var $profile = $user.find(".user-main")
$user.toggleClass('is-expanded');
$user.find('.user-expand-icon i').toggleClass('fa-angle-right fa-angle-left');
if ($profile.html().length === 0) {
  $profile.html("<%= j render partial: 'profile', locals: { user: @user } %>");
}